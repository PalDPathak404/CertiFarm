# CertiFarm Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/certifarm
# For MongoDB Atlas (cloud): 
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/certifarm

# JWT Secret (change this in production!)
JWT_SECRET=certifarm_super_secret_key_change_in_production_2024
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Verifiable Credential Issuer Configuration
VC_ISSUER_DID=did:web:certifarm.example.com
VC_ISSUER_NAME=CertiFarm Quality Authority
VC_CONTEXT_URL=https://www.w3.org/2018/credentials/v1